<%= stylesheet_link_tag 'ideas', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'devise', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class ="container-2">
<%= form_with(model: idea, local: true) do |form| %>
  <% if idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :カテゴリ %><br>
    <%= form.text_field :name, id: :idea_name %>
  </div>

  <div class="field">
    <%= form.label :タグ ,:class => "pi"%><br>
    <%= form.text_field :description, id: :idea_description ,:class => "tag"%>
  </div>

  <div class ="field">
    <%= form.label :写真, :class => "photo" %>
    <%= form.file_field :picture, id: :idea_picture ,:class => "file"%>
  </div>
  <div class="field">
    <%= form.label :あなたのアカウント名, :class => "account"%><br>
    (アカウント名は正しく入力してください)<br>
    <%= form.text_field :user_id%>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<br><br><br>
</div>
